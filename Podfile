# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

def uiPods
  pod 'Kingfisher'
  pod 'SnapKit'
end

def rxPods
  pod 'RxSwift'
  pod 'RxCocoa'
  pod 'ReactorKit'
  pod 'RxDataSources'
end

def networkPods
  pod 'Moya/RxSwift', '14.0.0-beta.6'
  pod 'ReachabilitySwift'
end

def diPods
 pod 'Swinject'
end

target 'NewsApp' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for NewsApp

  uiPods
  rxPods
  networkPods
  diPods

end
